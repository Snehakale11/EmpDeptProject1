@model EmpDeptProject.Models.Models.Department
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Department</h2>
            <hr />

        </div>

        <div class="mb-3">
            <label asp-for="DeptId">Department ID</label>
            <input asp-for="DeptId" disabled class="form-control" />

        </div

        <div class="mb-3">
            <label asp-for="DeptName">Department Name</label>
            <input asp-for="DeptName" disabled class="form-control" />

            @*Html.ValidationMessageFor(m=>m.CategoryName,"Category name cannot be more than 20 characters.")*@


        </div>

       
        

        <button type="submit" class="btn btn-outline-danger" style="width:150px">Delete</button>
        <a asp-controller="Departments" asp-action="Index"
           class="btn btn-secondary" style="width:150px">Back</a>


    </div>

</form>



