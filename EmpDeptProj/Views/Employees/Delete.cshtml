@model EmpDeptProject.Models.Models.Employee

@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />

        </div>

        <div class="mb-3">
            <label asp-for="EmpName"></label>
            <input asp-for="EmpName"  disabled class="form-control" />

            @*Html.ValidationMessageFor(m=>m.CategoryName,"Category name cannot be more than 20 characters.")*@


        </div>

        <div class="mb-3">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="DeptId"></label>
            <input asp-for="DeptId" disabled class="form-control" />

        </div>

        

        <button type="submit" class="btn btn-outline-danger" style="width:150px">Delete</button>
        <a asp-controller="Employees" asp-action="Index"
           class="btn btn-secondary" style="width:150px">Back</a>


    </div>

</form>




